<h1><%= @attraction.name %></h1>
Tickets: <%= @attraction.tickets %><br>
Min Height: <%= @attraction.min_height %><br>
Nausea: <%= @attraction.nausea_rating %><br>
Happiness Rating: <%= @attraction.happiness_rating %>
<br />

<% if is_admin? %>
<%= link_to 'Edit Attraction', edit_attraction_path(@attraction)  %>
<% else %>
<%= form_tag '/rides' do %>
<%= hidden_field_tag 'attraction', @attraction.id %>
<%= submit_tag "Go on this ride" %>
<% end %>
<% end %>
